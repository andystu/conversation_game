<%= form_for(@topic, :html => { :class => "form-horizontal", :role => "form" }) do |f| %>
  <% if @topic.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@topic.errors.count, "error") %> prohibited this topic from being saved:</h4>

      <ul>
      <% @topic.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :title, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :description, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :keywords, :class => "col-sm-2 control-label" %><br />
    <div class="col-sm-10">
      <%= f.text_field :keyword_list, :class => "form-control" , placeholder: "Tags (separated by commas)" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :questions, :class => "col-sm-2 control-label" %><br />
    <div class="col-sm-10">
      <%= f.text_field :question_list, :class => "form-control" , placeholder: "Tags (separated by commas)" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
